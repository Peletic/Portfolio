        </div>
    </div>
   <!-- <div class="h-full bg-secondary">

    </div>-->

</div>


<style>
    #background {
        background: radial-gradient(circle at bottom, navy 0, black 100%);
    }

    .space {
        background: rgba(128, 0, 128, 0.1) center / 200px 200px round;
        border: 1px solid rgba(128, 0, 128, 0.24);
        border-left: none;
        border-right: none;
        bottom: 0;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
    }

    .space1 {
        transform: rotate(45deg);
        animation: space 90s ease-in-out infinite;
    }

    .space2 {
        transform: rotate(90deg);
        animation: space 100s ease-in-out infinite;
    }

    .space3 {
        transform: rotate(135deg);
        animation: space 110s ease-in-out infinite;
    }

    @keyframes space {
        40% {
            opacity: 0.75;
        }
        50% {
            opacity: 0.25;
        }
        60% {
            opacity: 0.75;
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>