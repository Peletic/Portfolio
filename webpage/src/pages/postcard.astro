---
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <main class="h-full w-full" data-theme="postcard">
        <svg id="svg">
            <filter id="filter">
                <feTurbulence baseFrequency="0.1"/>
                <feColorMatrix values="0 0 0 9 -4
                               0 0 0 9 -4
                               0 0 0 9 -4
                               0 0 0 0 1"/>
            </filter>
        </svg>
        <div id="background" class="px-10 py-6 w-full h-full">

            <div class="shadow w-full h-full flex flex-col items-center justify-center relative">
                <div id="card"
                     class="z-10 relative shadow-accent bg-accent w-[70%] h-[63%] rounded-2xl rounded-b-none opacity-85 grid ">
                    <img id="concert-img" class="rounded-2xl rounded-b-none z-20 w-full h-full" src="./Concert_Band.jpg"
                         alt="Pboto"/>
                    <div class="w-full h-full justify-center items-center flex z-30 ">
                        <div class="flex-row">
                            <p class="p-4 text-3xl italic font-extrabold text-white">My</p>
                            <p class="text-6xl font-extrabold text-white py-2">Very Good Concert</p>
                            <p class="text-3xl italic font-extrabold text-white w-full text-right pt-4 p-2">-Peletic</p>
                        </div>
                    </div>
                    <div class="text-xl font-extrabold text-white z-30 opacity-100 mx-auto mt-4 border-solid border-white border-8 rounded-3xl h-fit py-3 px-2 sm-hidden">
                        ī
                    </div>
                    <div class="text-xl italic font-bold text-white z-30 opacity-100 flex flex-row-reverse w-full h-fit p-5 sm-hidden">
                        <div class="rounded-full py-2 px-3 bg-white text-accent border-white border-solid border-[5px] ml-2">
                            ≡
                        </div>
                        <div class="rounded-full py-2 px-5 border-white border-solid border-[5px] ml-2">
                            Program
                        </div>
                        <div class="rounded-full py-2 px-5 bg-white text-accent border-white border-solid border-[5px]">
                            Tickets
                        </div>
                    </div>
                    <div class="text-3xl text-white z-30 opacity-100 sm-hidden h-full flex flex-col">
                        <div class="text-6xl font-extrabold text-white z-30 w p-5 opacity-100 flex flex-row">
                            <img class="h-12 pr-1 filter-invert"
                                 src="data:image/svg+xml;base64,">
                            <img class="h-12 px-1 filter-invert"
                                 src="data:image/svg+xml;base64,">
                            <img class="h-12 px-1 filter-invert"
                                 src="data:image/svg+xml;base64,">
                        </div>
                        <div class="text-xl font-base text-white z-30 w p-2 pl-5 opacity-100 w-fit mt-auto">
                            <p class="py-3 w-fit" id="date-1">Test</p>
                            <p class="dot"> •</p>
                            <p class="py-3 w-fit" id="date-2"></p>
                            <p class="dot"> •</p>
                            <p class="py-3 pb-10 w-fit" id="date-3"></p>

                            <p class="py-3 w-fit" id="month"></p>
                        </div>

                    </div>
                </div>
                <div id="bottom" class="z-10 relative bg-white w-[70%] h-[7%] rounded-2xl rounded-t-none block opacity-90"/>
            </div>
        </div>
        <svg class="absolute z-[100] h-fit right-[9.6%] rotate-[-30deg] top-[1.5%] fill-secondary opacity-50" width="5%"
             height="5%" clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2"
             viewBox="0 0 22 22" xmlns="http://www.w3.org/2000/svg">
            <path d="m11.322 2.923c.126-.259.39-.423.678-.423.289 0 .552.164.678.423.974 1.998 2.65 5.44 2.65 5.44s3.811.524 6.022.829c.403.055.65.396.65.747 0 .19-.072.383-.231.536-1.61 1.538-4.382 4.191-4.382 4.191s.677 3.767 1.069 5.952c.083.462-.275.882-.742.882-.122 0-.244-.029-.355-.089-1.968-1.048-5.359-2.851-5.359-2.851s-3.391 1.803-5.359 2.851c-.111.06-.234.089-.356.089-.465 0-.825-.421-.741-.882.393-2.185 1.07-5.952 1.07-5.952s-2.773-2.653-4.382-4.191c-.16-.153-.232-.346-.232-.535 0-.352.249-.694.651-.748 2.211-.305 6.021-.829 6.021-.829s1.677-3.442 2.65-5.44z"
                  fill-rule="nonzero"/>
        </svg>
        <svg class="absolute z-[100] h-fit right-[9.6%] rotate-[30deg] top-[10.5%] fill-secondary opacity-50"
             width="4%"
             height="4%" clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2"
             viewBox="0 0 22 22" xmlns="http://www.w3.org/2000/svg">
            <path d="m11.322 2.923c.126-.259.39-.423.678-.423.289 0 .552.164.678.423.974 1.998 2.65 5.44 2.65 5.44s3.811.524 6.022.829c.403.055.65.396.65.747 0 .19-.072.383-.231.536-1.61 1.538-4.382 4.191-4.382 4.191s.677 3.767 1.069 5.952c.083.462-.275.882-.742.882-.122 0-.244-.029-.355-.089-1.968-1.048-5.359-2.851-5.359-2.851s-3.391 1.803-5.359 2.851c-.111.06-.234.089-.356.089-.465 0-.825-.421-.741-.882.393-2.185 1.07-5.952 1.07-5.952s-2.773-2.653-4.382-4.191c-.16-.153-.232-.346-.232-.535 0-.352.249-.694.651-.748 2.211-.305 6.021-.829 6.021-.829s1.677-3.442 2.65-5.44z"
                  fill-rule="nonzero"/>
        </svg>
        <svg class="absolute z-[100] h-fit right-[14%] rotate-[-30deg] top-[7%] fill-secondary opacity-50" width="3%"
             height="3%" clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2"
             viewBox="0 0 22 22" xmlns="http://www.w3.org/2000/svg">
            <path d="m11.322 2.923c.126-.259.39-.423.678-.423.289 0 .552.164.678.423.974 1.998 2.65 5.44 2.65 5.44s3.811.524 6.022.829c.403.055.65.396.65.747 0 .19-.072.383-.231.536-1.61 1.538-4.382 4.191-4.382 4.191s.677 3.767 1.069 5.952c.083.462-.275.882-.742.882-.122 0-.244-.029-.355-.089-1.968-1.048-5.359-2.851-5.359-2.851s-3.391 1.803-5.359 2.851c-.111.06-.234.089-.356.089-.465 0-.825-.421-.741-.882.393-2.185 1.07-5.952 1.07-5.952s-2.773-2.653-4.382-4.191c-.16-.153-.232-.346-.232-.535 0-.352.249-.694.651-.748 2.211-.305 6.021-.829 6.021-.829s1.677-3.442 2.65-5.44z"
                  fill-rule="nonzero"/>
        </svg>

    </main>
</Layout>
<script>
    const date = new Date().getDate()
    const month = new Date().toLocaleString('default', {month: 'long'})

    document.querySelector('#month').innerHTML = month
    document.querySelector('#date-1').innerHTML = `${date + 3}`
    document.querySelector('#date-2').innerHTML = `${date + 7}`
    document.querySelector('#date-3').innerHTML = `${date + 12}`
    console.log(date)
</script>
<style>
    main {
        overflow-y: hidden;
    }

    .dot {
        color: dodgerblue;
        opacity: 80;
        margin-left: 0.3rem;
    }

    .sm-hidden {
        @media (max-aspect-ratio: 1/0.8) {

            display: none;
        }
    }

    .filter-invert {
        filter: invert(100%);
    }

    #overlay {
        filter: hue-rotate(180deg);
    }

    #card * {
        grid-row: 1;
        grid-column: 1;
    }

    #card {
        box-shadow: 4px -1px 8px -2px gray;
    }
    #bottom {
        box-shadow: 4px -3px 8px -2px gray;
    }

    #concert-img {
        min-height: 100%;
        min-width: 100%;
        object-fit: cover;
    }

    #background {
        background: linear-gradient(rgb(165, 57, 47), #170746);
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    #card {
        z-index: 20;
    }

    #background::before,
    #background::after {

        opacity: 30%;
        z-index: 0;
        content: '';
        position: absolute;
    }

    #background::before {
        filter: url(#filter);
        z-index: 0;
        content: '';
        left: 0;
        top: 0;
        opacity: 30%;
        width: 100%;
        height: 100%;
        position: absolute;
    }

    #svg {
        display: none;
    }
</style>