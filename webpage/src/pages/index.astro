
---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/carousel/Carousel.astro";
import VerticleTitle from "../components/VerticleTitle.astro";
---



<Layout>
    <main data-theme="dark" class="bg-white w-full h-full">
        <div class="bg-primary w-full h-full flex flex-row text-7xl font-extrabold overflow-hidden">
            <div class="w-2/3 h-full bg-primary float-left">
                <VerticleTitle/>
            </div>
            <div class="w-1/3 h-full bg-secondary relative flex flex-col-reverse">
                <div class="h-fit bg-secondary">
                    <Carousel images={["img1.png", "img2.png", "img3.jpg"]} captions={["", "", ""]}/>
                </div>
                <div class="h-full bg-accent">
                    <a href="/postcard">/postcard</a>
                    <a href="/home">/home (webgl stuff)</a>
                    IP of TrashPandaDev LLC.
                </div>
            </div>
        </div>
    </main>


</Layout>

